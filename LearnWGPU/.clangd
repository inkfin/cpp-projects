# https://clangd.llvm.org/config

InlayHints:
  BlockEnd: true
Hover:
  ShowAKA: true

CompileFlags:
  Add:
    [
      -xc++,
      -std=c++20,
      -Wall,
      -Wextra,
      -stdlib=libc++,
      -isystem,
      /Library/Developer/CommandLineTools/SDKs/MacOSX.sdk/usr/include/c++/v1,
      -DWEBGPU_BACKEND_DAWN=1,
    ]
  Compiler: clang++
  CompilationDatabase: build/multi/
